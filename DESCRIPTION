Package: kwb.package
Title: Install / Unstall KWB Packages and Show Package Dependencies
Version: 0.3.0.9000
Authors@R: c(
    person("Hauke", "Sonnenberg", , "hauke.sonnenberg@kompetenz-wasser.de", role = c("aut", "cre"),
           comment = c(ORCID = "0000-0001-9134-2871")),
